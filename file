pipeline { 
    agent any
       stage('scm checkout'){
        git credentialsId: 'sree', url: 'https://github.com/srinivasareddy4218/loginApp.git'
    }
    stage('compile-package-create-war-file'){
         bat label: '', script: ' cd loginApp && mvn clean package && cd target '
         }
        stage('deploy to tomcat'){
            
        }
        
        deploy adapters: [tomcat8(credentialsId: 'tomcat', path: '', url: 'http://localhost:9090')], contextPath: null , war: '**/*.war'
}

